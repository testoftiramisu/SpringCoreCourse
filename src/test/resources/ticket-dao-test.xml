<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <import resource="id-generator-service.xml"/>
    <import resource="event-service-test.xml"/>

    <bean id="ticketDao" class="com.epam.spring.hometask.dao.ticket.CinemaTicketDao">
        <constructor-arg ref="idGeneratorService"/>
        <property name="tickets" ref="testTickedOne"/>
    </bean>

    <bean id="dateTimeNow" class="java.time.LocalDateTime" factory-method="now"/>


    <bean id="testTickedOne" class="com.epam.spring.hometask.domain.Ticket">
        <constructor-arg name="seat" value="10"/>
        <constructor-arg name="dateTime" ref="dateTimeNow"/>
        <constructor-arg name="event" ref="testEventOne"/>
        <constructor-arg name="user" ref="user"/>
    </bean>

    <bean id="testTickedTwo" class="com.epam.spring.hometask.domain.Ticket">
        <constructor-arg name="seat" value="33"/>
        <constructor-arg name="dateTime" ref="dateTimeNow"/>
        <constructor-arg name="event" ref="testEventTwo"/>
        <constructor-arg name="user" ref="user"/>
    </bean>

    <bean id="user" class="com.epam.spring.hometask.domain.User">
        <constructor-arg name="firstName" value="TestName"/>
        <constructor-arg name="lastName" value="TestLastName"/>
        <constructor-arg name="email" value="test@email.com"/>
    </bean>

</beans>

