<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:auditoriums.properties</value>
            </list>
        </property>
        <property name="ignoreResourceNotFound" value="true"/>
        <property name="systemPropertiesMode">
            <util:constant
                    static-field="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer.SYSTEM_PROPERTIES_MODE_OVERRIDE"/>
        </property>
    </bean>

    <bean id="imax" class="com.epam.spring.hometask.domain.Auditorium" scope="prototype">
        <constructor-arg value="${imax.name}"/>
        <constructor-arg value="${imax.numberOfSeats}"/>
        <constructor-arg>
            <bean class="org.springframework.util.StringUtils"
                  factory-method="commaDelimitedListToSet">
                <constructor-arg type="java.lang.String" value="${imax.vipSeats}"/>
            </bean>
        </constructor-arg>
    </bean>

    <bean id="multikino" class="com.epam.spring.hometask.domain.Auditorium" scope="prototype">
        <constructor-arg value="${multikino.name}"/>
        <constructor-arg value="${multikino.numberOfSeats}"/>
        <constructor-arg>
            <bean class="org.springframework.util.StringUtils"
                  factory-method="commaDelimitedListToSet">
                <constructor-arg type="java.lang.String" value="${multikino.vipSeats}"/>
            </bean>
        </constructor-arg>
    </bean>

    <bean id="auditoriumDao" class="com.epam.spring.hometask.dao.auditorium.CinemaAuditoriumDao">
        <constructor-arg ref="idGeneratorService"/>
        <property name="auditoriums">
            <util:list>
                <ref bean="imax"/>
            </util:list>
        </property>
    </bean>

    <bean id="idGeneratorService"
          class="com.epam.spring.hometask.service.id.RandomIdGeneratorService"/>

</beans>