<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="userOne" class="com.epam.spring.hometask.domain.User">
        <constructor-arg name="firstName" value="FirstName"/>
        <constructor-arg name="lastName" value="FirstLastName"/>
        <constructor-arg name="email" value="testUserOne@email.com"/>
    </bean>

    <bean id="userTwo" class="com.epam.spring.hometask.domain.User">
        <constructor-arg name="firstName" value="SecondName"/>
        <constructor-arg name="lastName" value="SecondLastName"/>
        <constructor-arg name="email" value="testUserTwo@email.com"/>
    </bean>

</beans>